generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model ProductA {
  id          String     @id @default(uuid())
  title       String
  description String?
  price       Int
  image       String
  category    String
  profile     Profile    @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  profileId   String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
 
}

model ProductB {
  id          String     @id @default(uuid())
  title       String
  description String?
  price       Int
  image       String
  category    String
  profile     Profile    @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  profileId   String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
}

model Profile {
  id           String     @id @default(uuid())
  clerkId      String     @unique
  name         String
  email        String
  phone        String
  emailcontect String
  profileImage String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  favorites    Favorite[]
  productsA    ProductA[]
  productsB    ProductB[]
}

model Favorite {
  id          String      @id @default(uuid())
  profile     Profile    @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  profileId   String

  productType ProductType
  productId   String

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([profileId, productType, productId])
}

enum ProductType {
  A
  B
}
