generator client {
  provider = "prisma-client-js"
}


  
datasource db {
  provider  = "postgresql"
  url      = env("DATABASE_URL")   // <-- ต้องใส่ตรงนี้
  // directUrl = env("DIRECT_URL")  // <-- optional, ใช้สำหรับ migration
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  price       Int
  image       String
  category    String
  profile     Profile  @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  profileId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Profile {
  id           String    @id @default(uuid())
  clerkId      String    @unique
  name         String
  email        String
  phone        String
  emailcontect String
  profileImage String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  // landmarks    Landmark[]
  // favorites    Favorite[]
  products     Product[]
}

